<div class="centered">
  <div class="row">
    <h2>Inicio de sesión</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.input :email, label: "Correo electronico", required: false, autofocus: true, class: 'form-control' %>
        <%= f.input :password, label: "Contraseña", required: false, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.button :submit, "Iniciar sesión", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>

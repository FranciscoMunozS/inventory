<div class="centered">
  <div class="row">
    <h2>Registro</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-group">
        <%= f.input :username, label: "Nombre de usuario", required: true, autofocus: true, class: "form-control" %>
        <%= f.input :email, label: "Correo electronico", required: true, autofocus: true, class: "form-control" %>
        <%= f.input :password, label: "Contraseña", required: true, hint: ("#{@minimum_password_length} caracteres minimos" if @minimum_password_length), class: "form-control" %>
        <%= f.input :password_confirmation, label: "Confirmar contraseña", required: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.button :submit, "Registrarse", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
